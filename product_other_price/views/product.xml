<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_inherit_form_other_view" model="ir.ui.view">
        <field name="name">Product Template Tags Form View</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <field name="list_price" position="after">
                <field name="other_price" />
            </field>
        </field>
    </record>


    <record id="inh_product_template_other_tree" model="ir.ui.view">
        <field name="name">inh.product.template.family</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="list_price" position="after">
                <field name="other_price" />
            </field>
        </field>
    </record>
</odoo>
